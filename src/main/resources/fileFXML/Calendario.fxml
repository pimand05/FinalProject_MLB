<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<BorderPane maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="600.0" prefWidth="900.0" stylesheets="@../Style/Calendario.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.ControllerCalendario">

    <top>
        <VBox spacing="10" styleClass="header-container">
            <HBox alignment="CENTER" spacing="20">
                <Label styleClass="title-label" text="Calendario Temporada 1" />
                <Label fx:id="fechaActualLabel" styleClass="date-label" />
            </HBox>

            <HBox spacing="10" styleClass="filter-box">
                <Button fx:id="btnMesAnterior" mnemonicParsing="false" text="◀" />
                <Button fx:id="btnMesSiguiente" mnemonicParsing="false" text="▶" />
                <DatePicker fx:id="filtroFecha" promptText="Filtrar por fecha" />
                <ComboBox fx:id="filtroEquipo" prefWidth="200" promptText="Filtrar por equipo" />
                <Button onAction="#handleLimpiarFiltros" text="Limpiar Filtros" />
            </HBox>
        </VBox>
    </top>

    <center>
        <SplitPane dividerPositions="0.5">
            <ScrollPane>
                <GridPane fx:id="calendarioGrid" styleClass="calendar-grid" />
            </ScrollPane>

            <TableView fx:id="partidosTable" styleClass="partidos-table">
                <columns>
                    <TableColumn fx:id="colFecha" text="Fecha">
                        <cellValueFactory><PropertyValueFactory property="fecha" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colLocal" text="Local">
                        <cellValueFactory><PropertyValueFactory property="equipoLocal" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn styleClass="vs-column" text="VS" />
                    <TableColumn fx:id="colVisitante" text="Visitante">
                        <cellValueFactory><PropertyValueFactory property="equipoVisitante" /></cellValueFactory>
                    </TableColumn>
                    <TableColumn fx:id="colEstadio" text="Estadio">
                        <cellValueFactory><PropertyValueFactory property="estadio" /></cellValueFactory>
                    </TableColumn>
                </columns>
            </TableView>
        </SplitPane>
    </center>
</BorderPane>
